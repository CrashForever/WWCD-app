.container
  ul#myTab.nav.nav-tabs role="tablist"
    li.nav-item
      a#home-tab.nav-link.active aria-controls="home" aria-selected="true" data-toggle="tab" href="#home" role="tab"  Home
    li.nav-item
      a#profile-tab.nav-link aria-controls="profile" aria-selected="false" data-toggle="tab" href="#profile" role="tab"  Profile

  #myTabContent.tab-content
    #home.tab-pane.fade.show.active aria-labelledby="home-tab" role="tabpanel"
      .row
        - results.results_video.each.with_index do |video, index|
              .col-sm-4
                .card style=("width: 20rem;margin-top:3%;")
                  .card-body
                    h4.card-title Card title
                    iframe.youtube-player frameborder="0" height="10%" width="100%"  src="http://www.youtube.com/embed/#{video}" type="text/html"
                    br
                    a.btn.btn-primary.video{
                      data-video="https://www.youtube.com/embed/#{video}"
                      data-toggle="modal"
                      data-target="#videoModal"
                    }     Go Watch Video!

      #videoModal.modal.fade aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1"
        .modal-dialog.modal-lg
          .modal-content
            .modal-body
              button.close aria-label="Close" data-dismiss="modal" type="button"
                span aria-hidden="true"  &times;
              iframe allowfullscreen="" frameborder="0" height="500px" src="" width="100%"

    #profile.tab-pane.fade aria-labelledby="profile-tab" role="tabpanel"  ...
javascript:
  $( document ).ready(function() {
    console.log( "ready!" );
    // window.scrollTo(0, document.body.scrollHeight);
    $("html, body").animate({ scrollTop: $(document).height() }, 1000);
    var offset = 250;

    var duration = 300;

    jQuery(window).scroll(function() {
      if (jQuery(this).scrollTop() > offset) {
          jQuery('.back-to-top').fadeIn(duration);
      } else {
        jQuery('.back-to-top').fadeOut(duration);
      }
    });
    jQuery('.back-to-top').click(function(event) {
      event.preventDefault();
      jQuery('html, body').animate({scrollTop: 0}, duration);
      return false;
    });

    $(".video").click(function () {
      var theModal = $(this).data("target"),
      videoSRC = $(this).attr("data-video"),
      videoSRCauto = videoSRC + "?modestbranding=1&rel=0&controls=1&showinfo=0&html5=1&autoplay=1";
      console.log(".video clicked");
      $(theModal + ' iframe').attr('src', videoSRCauto);
      $(theModal + ' button.close').click(function () {
        $(theModal + ' iframe').attr('src', videoSRC);
      });
    });
  });
